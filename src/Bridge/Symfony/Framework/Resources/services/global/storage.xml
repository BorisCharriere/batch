<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults public="false"/>

        <service id="yokai_batch.storage.filesystem"
                 class="Yokai\Batch\Storage\FilesystemJobExecutionStorage">
            <argument type="service" id="Yokai\Batch\Serializer\JobExecutionSerializerInterface"/>
            <argument>%yokai_batch.storage.filesystem.dir%</argument>
            <argument>%yokai_batch.job_execution.serialize_format%</argument>
        </service>
    </services>
</container>
