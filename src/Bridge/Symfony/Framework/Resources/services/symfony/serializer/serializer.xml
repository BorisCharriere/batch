<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults public="false"/>

        <service id="yokai_batch.job_execution_serializer.symfony_serializer"
                 class="Yokai\Batch\Bridge\Symfony\Serializer\SerializerJobExecutionSerializer">
            <argument type="service" id="serializer"/>
            <argument>%yokai_batch.job_execution.serialize_format%</argument>
            <argument>%yokai_batch.job_execution_serializer.symfony_serializer.common_context%</argument>
            <argument>%yokai_batch.job_execution_serializer.symfony_serializer.serialize_context%</argument>
            <argument>%yokai_batch.job_execution_serializer.symfony_serializer.deserialize_context%</argument>
        </service>

        <service id="yokai_batch.job_execution_serializer.symfony_serializer.job_execution_normalizer"
                 class="Yokai\Batch\Bridge\Symfony\Serializer\JobExecutionNormalizer">
            <tag name="serializer.normalizer"/>
        </service>
    </services>
</container>
